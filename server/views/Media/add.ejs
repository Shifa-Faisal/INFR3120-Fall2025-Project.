<%- include('../partials/header') %>
<%- include('../partials/main_nav') %>

<div class="container mt-4">
  <h1><%= title %></h1>
  <p class="lead">Use this form to add a new media review to the database.</p>

  <form action="/media/add" method="POST" class="mt-3">

    <!-- Media Type -->
    <div class="mb-3">
      <label for="type" class="form-label">Media Type</label>
      <select id="type" name="type" class="form-select" required>
        <option value="">-- Select Type --</option>
        <option value="Movie">Movie</option>
        <option value="TV Show">TV Show</option>
        <option value="Book">Book</option>
        <option value="Album">Album</option>
        <option value="Podcast">Podcast</option>
      </select>
    </div>

    <!-- Name -->
    <div class="mb-3">
      <label for="name" class="form-label">Title / Name</label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control"
        placeholder="e.g. Interstellar, Attack on Titan, Atomic Habits"
        required
      >
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Short Description</label>
      <textarea
        id="description"
        name="description"
        class="form-control"
        rows="3"
        placeholder="Brief summary of the story or content"
        required
      ></textarea>
    </div>

    <!-- Rating -->
    <div class="mb-3">
      <label class="form-label">Rating (out of 5 stars)</label>
      <select id="rating" name="rating" class="form-select" required>
        <option value="">-- Select Rating --</option>
        <option value="1">1 - ⭐</option>
        <option value="2">2 - ⭐⭐</option>
        <option value="3">3 - ⭐⭐⭐</option>
        <option value="4">4 - ⭐⭐⭐⭐</option>
        <option value="5">5 - ⭐⭐⭐⭐⭐</option>
      </select>
    </div>

    <!-- Review -->
    <div class="mb-3">
      <label for="review" class="form-label">Your Review</label>
      <textarea
        id="review"
        name="review"
        class="form-control"
        rows="4"
        placeholder="Write your thoughts, opinions, and why you gave this rating."
        required
      ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">
      <i class="fa fa-save"></i> Save Review
    </button>

    <a href="/media" class="btn btn-secondary ms-2">
      <i class="fa fa-arrow-left"></i> Back to List
    </a>
  </form>
</div>

<%- include('../partials/footer') %>